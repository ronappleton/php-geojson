{
    "name": "ronappleton/php-geojson",
    "description": "GeoJSON object builder.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "RonAppleton\\GeoJson\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RonAppleton\\GeoJson\\Tests": "tests/"
        }
    },
    "authors": [
        {
            "name": "Ron Appleton",
            "email": "ron.appleton@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=8.1",
        "stematic/testing": "dev-develop"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "cs": "vendor/bin/testing cs:code_sniffer",
        "test": "vendor/bin/testing test"
    }
}
